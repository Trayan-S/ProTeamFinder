@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="card card-authentication1 mx-auto">
    <div class="card-body">
        <div class="text-center">
            <img src="~/images/logo-icon.png" alt="logo icon" />
        </div>
        <div class="card-title text-uppercase text-center py-3">@ViewData["Title"]</div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <div class="position-relative has-icon-right">
                    <input asp-for="Input.Email" class="form-control" placeholder="example@email.com" />
                    <div class="form-control-position">
                        <i class="icon-envelope-open"></i>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-light btn-outline-white btn-block">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
