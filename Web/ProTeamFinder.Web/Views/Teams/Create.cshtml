@using ProTeamFinder.Web.ViewModels.Teams;
@model CreateTeamInputModel
@{ this.ViewData["Title"] = "Create new team"; }

<div class="col-md-6 offset-3">
    <div class="card">
        <div class="card-body">
            <div class="card-title">@this.ViewData["Title"]</div>
            <hr>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <span asp-validation-for="Name" class="text-danger ml-3"></span>
                    <input asp-for="Name" class="form-control form-control-rounded" placeholder="Enter team name...">
                </div>
                <div class="form-group">
                    <label asp-for="TeamTag"></label>
                    <span asp-validation-for="TeamTag" class="text-danger ml-3"></span>
                    <input asp-for="TeamTag" class="form-control form-control-rounded" placeholder="Enter your team tag...">
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <span asp-validation-for="Description" class="text-danger ml-3"></span>
                    <textarea asp-for="Description" class="form-control form-control-rounded" placeholder="Information about your team" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-light btn-round px-5">
                    <i class="zmdi zmdi-accounts" style="font-size: 12px;"></i> Create team</button>
                </div>
            </form>
        </div>
    </div>
</div>
