@using ProTeamFinder.Web.ViewModels.Teams;
@model CreateTeamInputModel
@{
    ViewData["Title"] = "Create a team";
}

<div class="container col-md-8 mt-5 align-items-center">
    <div class="border rounded">
        <h3 class="text-center">Create team</h3>
        <hr />
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group col-md-6">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-2">
                <label asp-for="TeamTag"></label>
                <input asp-for="TeamTag" class="form-control" />
                <span asp-validation-for="TeamTag" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <input type="submit" class="btn btn-primary"/>
        </form>
    </div>
</div>